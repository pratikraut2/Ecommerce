{
  "info": {
    "name": "E-Commerce API (JWT Auth)",
    "_postman_id": "ecommerce-jwt-api",
    "description": "Postman collection for your shop API using JWT class-based views.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/signup/",
          "host": ["{{base_url}}"],
          "path": ["auth", "signup", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set('access_token', jsonData.access);",
              "pm.environment.set('refresh_token', jsonData.refresh);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login/",
          "host": ["{{base_url}}"],
          "path": ["auth", "login", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set('access_token', jsonData.access);",
              "pm.environment.set('refresh_token', jsonData.refresh);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Token Refresh",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/token/refresh/",
          "host": ["{{base_url}}"],
          "path": ["auth", "token", "refresh", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set('access_token', jsonData.access);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/profile/",
          "host": ["{{base_url}}"],
          "path": ["auth", "profile", ""]
        }
      }
    },
    {
      "name": "Cart - List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/cart/",
          "host": ["{{base_url}}"],
          "path": ["cart", ""]
        }
      }
    },
    {
      "name": "Cart - Add Item",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"quantity\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/cart/add/1/",
          "host": ["{{base_url}}"],
          "path": ["cart", "add", "1", ""]
        }
      }
    },
    {
      "name": "Cart - Remove Item",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/cart/remove/1/",
          "host": ["{{base_url}}"],
          "path": ["cart", "remove", "1", ""]
        }
      }
    },
    {
      "name": "Orders - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"shipping_address\": \"123 Main St\",\n  \"payment_method\": \"COD\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/orders/create/",
          "host": ["{{base_url}}"],
          "path": ["orders", "create", ""]
        }
      }
    },
    {
      "name": "Orders - Detail",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/orders/1/",
          "host": ["{{base_url}}"],
          "path": ["orders", "1", ""]
        }
      }
    },
    {
      "name": "Orders - Pay",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/orders/1/pay/",
          "host": ["{{base_url}}"],
          "path": ["orders", "1", "pay", ""]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api/shop"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "refresh_token",
      "value": ""
    }
  ]
}
